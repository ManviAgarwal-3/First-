#3
#include <stdio.h>

int main() {
    char s[200];
    scanf("%s",s);
    int l=strlen(s);
    int j,i=0,a=l;
    int f=0;
    char a1;
    printf("Length of the string is %d\n",l);
    for(i=0;i<l;i++)
    {
        for(j=i+1;j<l;++j)
        {
            if (s[i] == s[j])
            {
                a=a-1;
            }
            if (s[i] == s[j] && f==0)
            {
                f=1;
                a1=s[i];
            }
        }
    }
    printf("Word frequency is %d\n",a);
    if (f ==0)
    {
        printf("No character is repeated in the string");
    }
    else
    {
        printf("First repeated character is %c\n",a1);
    }
    for(i=0;i<l;i++)
    {
        f=0;
        for(j=i+1;j<l;++j)
        {
            if (s[i] == s[j])
            {
                f=1;
            }
        }
        if (f==0)
        {
            printf("First non-repeated character is %c",s[i]);
            break;
        }
    }
    
    return 0;
}

# CAT Theory
2

#include <stdio.h>

int main() {
    char s[500];
    gets(s);
    int upper=0,lower=0,white_space=0,digits=0,special=0;
    int i=0;
    while(s[i] != '\0')
    {
        if (s[i]>='A' && s[i]<='Z')
        {
            upper++;
        }
        else if(s[i]>='a' && s[i]<='z')
        {
            lower++;
        }
        else if(s[i]>='0' && s[i]<='9')
        {
            digits++;
        }
        else if(s[i] == ' ')
        {
            white_space++;
        }
        else
        {
            special++;
        }
        ++i;
    }
    printf("Uppercase letters %d\n",upper);
    printf("Lowercase letters %d\n",lower);
    printf("Digits %d\n",digits);
    printf("White spaces %d\n",white_space);
    printf("Special Characters %d\n",special);
    return 0;
}
